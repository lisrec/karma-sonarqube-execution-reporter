{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015
    },
    "rules": {
        "indent": [ 2, "tab" ],
        "linebreak-style": [ 2, "windows" ],
        "quotes": [ 2, "single" ],
        "semi": [ 2, "always" ],
        "no-var": 2,
        "prefer-const": 2,
        "prefer-arrow-callback": 1,
        "no-unused-vars": [ 2, {"argsIgnorePattern": "^_"}]
    }
}
